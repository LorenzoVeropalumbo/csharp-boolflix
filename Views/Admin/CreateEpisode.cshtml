@model Episode
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo Contenuto</h1>
            </div>
            <form asp-controller="Admin" asp-action="CreateEpisode" method="post">

                <div class="mb-3">
                    <strong>Titolo:</strong>
                    <input asp-for="@Model.Title" class="d-block w-100" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="@Model.Description" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>durata:</strong>
                    <input asp-for="@Model.Duration" class="d-block w-100"></input>
                    <span asp-validation-for="@Model.Duration" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Stagione:</strong>
                    <input asp-for="@Model.SeasonId" class="d-block w-100"></input>
                    <span asp-validation-for="@Model.SeasonId" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>